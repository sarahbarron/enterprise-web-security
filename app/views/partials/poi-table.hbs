<!-- Partial table listing all points of interest and their
categories along with buttons to view, delete and update
Points of Interest
-->
<table class="ui fixed table segment">
    <thead>
    <tr>
        <th colspan="1"></th>
        <th colspan="3">Name</th>
        <th colspan="3">Category</th>
        <th colspan="1"></th>
        {{#if onlyusercanview}}
            <th colspan="1"></th>
            <th colspan="1"></th>
        {{/if}}
    </tr>
    </thead>
    <tbody>
    {{#each poi}}
        <tr>
            <td colspan="1"><i class="teal large map marker alternate icon"></i></td>
            <td colspan="3"><a href="/view-poi/{{_id}}">{{name}} </a></td>
            <td colspan="3">{{category.name}}</td>
            <td colspan="1">
                <a href="/view-poi/{{_id}}" class="ui icon button"><i class="eye teal icon"></i></a>
            </td>
            {{#if ../onlyusercanview}}
                <td colspan="1">
                    <a href="/delete-poi/{{_id}}" class="ui icon button">
                        <i class="icon red trash"></i>
                    </a>
                </td>
                <td colspan="1">
                    <a href="/update-poi/{{_id}}" class="ui icon button">Update</a>
                </td>
            {{/if}}
        </tr>
    {{/each}}
    </tbody>
</table>